generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model account {
  account_number String        @id @db.VarChar(20)
  balance        Decimal?      @db.Decimal(10, 2)
  cpf            String?       @db.VarChar(11)
  card           card[]
  transaction    transaction[]
}

model card {
  card_id         Int       @id @default(autoincrement())
  card_name       String?   @db.VarChar(50)
  card_number     String?   @db.VarChar(16)
  expiration_date DateTime? @db.Date
  cvv             String?   @db.VarChar(3)
  iscredit        Boolean?
  account_number  String?   @db.VarChar(20)
  account         account?  @relation(fields: [account_number], references: [account_number], onDelete: NoAction, onUpdate: NoAction)
}

model client {
  client_id Int     @id @default(autoincrement())
  name      String? @db.VarChar(100)
  cpf       String? @unique @db.VarChar(11)
  email     String? @unique @db.VarChar(100)
  password  String? @db.VarChar(100)
}

model transaction {
  transaction_id   Int       @id @default(autoincrement())
  account_number   String?   @db.VarChar(20)
  amount           Decimal?  @db.Decimal(10, 2)
  transaction_type String?   @db.VarChar(10)
  transaction_date DateTime? @db.Timestamp(6)
  account          account?  @relation(fields: [account_number], references: [account_number], onDelete: NoAction, onUpdate: NoAction)
}
